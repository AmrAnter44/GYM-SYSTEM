{
  "name": "gym-management-system",
  "version": "1.0.0",
  "description": "Gym Management System with Electron and Next.js",
  "main": "main.js",
  "scripts": {
    "dev": "next dev -p 4001",
    "build": "next build",
    "start": "concurrently \"next dev -p 4001\" \"wait-on http://localhost:4001 && electron .\"",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm run dev\" \"wait-on http://localhost:4001 && electron .\"",
    "pack": "electron-builder --dir",
    "dist": "next build && electron-builder"
  },
  "keywords": [
    "gym",
    "management",
    "electron",
    "nextjs"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "better-sqlite3": "^12.4.1",
    "electron": "^27.0.0",
    "exceljs": "^4.4.0",
    "next": "^14.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.2",
    "electron-builder": "^24.9.1",
    "electron-rebuild": "^3.2.9",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.18",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.gym.management",
    "productName": "Gym Management System",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "out/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "icon.png"
    }
  }
}
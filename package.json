{
  "name": "gym-management-system",
  "version": "1.0.0",
  "description": "نظام إدارة الجيم - Desktop App",
  "main": "main.js",
  "scripts": {
    "dev": "next dev -p 4001",
    "build": "next build",
    "export": "next export",
    "start": "next start",
    "lint": "next lint",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm run dev\" \"wait-on http://localhost:4001 && electron .\"",
    "pack": "npm run build && npm run export && electron-builder --dir",
    "dist": "npm run build && npm run export && electron-builder",
    "dist-win": "npm run build && npm run export && electron-builder --win --x64"
  },
  "build": {
    "appId": "com.gym.management",
    "productName": "نظام إدارة الجيم",
    "directories": {
      "output": "release"
    },
    "files": [
      "main.js",
      "preload.js",
      "out/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "dependencies": {
    "better-sqlite3": "^12.4.1",
    "electron-squirrel-startup": "^1.0.1",
    "next": "^14.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.14",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.2",
    "electron": "^38.2.2",
    "electron-builder": "^24.13.3",
    "electron-rebuild": "^3.2.9",
    "eslint": "^8",
    "eslint-config-next": "14.0.0",
    "postcss": "^8",
    "tailwindcss": "^4.1.14",
    "wait-on": "^7.2.0"
  }
}
